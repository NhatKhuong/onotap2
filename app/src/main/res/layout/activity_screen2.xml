<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen2">

    <Button
        android:id="@+id/btnman"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ECE5E5"
        android:text="man"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnall"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#ECE5E5"
        android:text="all"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnchi"
        app:layout_constraintStart_toEndOf="@+id/btnchi"
        app:layout_constraintTop_toTopOf="@+id/btnchi"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnchi"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#ECE5E5"
        android:text="childen"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnwon"
        app:layout_constraintStart_toEndOf="@+id/btnwon"
        app:layout_constraintTop_toTopOf="@+id/btnwon"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnwon"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#ECE5E5"
        android:text="wonman"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnman"
        app:layout_constraintStart_toEndOf="@+id/btnman"
        app:layout_constraintTop_toTopOf="@+id/btnman"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/lvgoods"
        android:layout_width="409dp"
        android:layout_height="600dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnman"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>